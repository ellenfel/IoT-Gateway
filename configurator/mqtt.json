{
  "broker": {
    "name": "Default Local Broker",
    "host": "127.0.0.1",
    "port": 1890,
    "version": 5,
    "clientId": "tb_gw_oruv4",
    "maxNumberOfWorkers": 100,
    "maxMessageNumberPerWorker": 10,
    "security": {
      "type": "anonymous"
    }
  },
  "dataMapping": [
    {
      "topicFilter": "v1/devices/me/telemetry",
      "subscriptionQos": 1,
      "converter": {
        "type": "json",
        "deviceInfo": {
          "deviceNameExpressionSource": "message",
          "deviceNameExpression": "${devName}",
          "deviceProfileExpressionSource": "message"
        },
        "sendDataOnlyOnChange": false,
        "timeout": 60000,
        "attributes": [],
        "timeseries": [
          {
            "type": "integer",
            "key": "water_detector",
            "value": "${modbus_chn_1}"
          },
          {
            "type": "integer",
            "key": "lid_switch",
            "value": "${modbus_chn_2}"
          },
          {
            "type": "integer",
            "key": "pulse_a",
            "value": "${modbus_chn_3}"
          },
          {
            "type": "integer",
            "key": "pulse_b",
            "value": "${modbus_chn_4}"
          },
          {
            "type": "integer",
            "key": "pulse_c",
            "value": "${modbus_chn_5}"
          },
          {
            "type": "float",
            "key": "voltage_a",
            "value": "${modbus_chn_6}"
          },
          {
            "type": "float",
            "key": "voltage_b",
            "value": "${modbus_chn_7}"
          },
          {
            "type": "float",
            "key": "voltage_c",
            "value": "${modbus_chn_8}"
          },
          {
            "type": "float",
            "key": "current_a",
            "value": "${modbus_chn_9}"
          },
          {
            "type": "float",
            "key": "current_b",
            "value": "${modbus_chn_10}"
          },
          {
            "type": "float",
            "key": "current_c",
            "value": "${modbus_chn_11}"
          },
          {
            "type": "float",
            "key": "IR_A",
            "value": "${modbus_chn_12}"
          },
          {
            "type": "float",
            "key": "IR_B",
            "value": "${modbus_chn_13}"
          },
          {
            "type": "float",
            "key": "IR_C",
            "value": "${modbus_chn_14}"
          },
          {
            "type": "float",
            "key": "temp",
            "value": "${modbus_chn_15}"
          },
          {
            "type": "float",
            "key": "hum",
            "value": "${modbus_chn_16}"
          },
          {
            "type": "float",
            "key": "pressure",
            "value": "${modbus_chn_17}"
          },
          {
            "type": "float",
            "key": "thermocouple_a",
            "value": "${modbus_chn_18}"
          },
          {
            "type": "float",
            "key": "thermocouple_b",
            "value": "${modbus_chn_19}"
          },
          {
            "type": "float",
            "key": "thermocouple_c",
            "value": "${modbus_chn_20}"
          },
          {
            "type": "float",
            "key": "mppt_batary_voltage",
            "value": "${modbus_chn_21}"
          },
          {
            "type": "float",
            "key": "mppt_panel_power",
            "value": "${modbus_chn_22}"
          },
          {
            "type": "float",
            "key": "harvesting_battery_voltage",
            "value": "${modbus_chn_23}"
          },
          {
            "type": "float",
            "key": "harvesting_battery_power",
            "value": "${modbus_chn_24}"
          },
          {
            "type": "float",
            "key": "ipec_pddata_avg_pd_a",
            "value": "${modbus_chn_25}"
          },
          {
            "type": "float",
            "key": "ipec_pddata_avg_pd_b",
            "value": "${modbus_chn_26}"
          },
          {
            "type": "float",
            "key": "ipec_pddata_avg_pd_c",
            "value": "${modbus_chn_27}"
          },
          {
            "type": "integer",
            "key": "Water_Detection_Outside",
            "value": "${modbus_chn_28}"
          },
          {
            "type": "integer",
            "key": "rssi",
            "value": "${rssi}"
          },
          {
            "type": "float",
            "key": "snr",
            "value": "${snr}"
          }
        ]
      }
    }
  ],
  "requestsMapping": {
    "connectRequests": [
      {
        "topicFilter": "sensor/connect",
        "deviceInfo": {
          "deviceNameExpressionSource": "message",
          "deviceNameExpression": "${serialNumber}",
          "deviceProfileExpressionSource": "constant",
          "deviceProfileExpression": "Thermometer"
        }
      },
      {
        "topicFilter": "sensor/+/connect",
        "deviceInfo": {
          "deviceNameExpressionSource": "topic",
          "deviceNameExpression": "(?<=sensor/)(.*?)(?=/connect)",
          "deviceProfileExpressionSource": "constant",
          "deviceProfileExpression": "Thermometer"
        }
      }
    ],
    "disconnectRequests": [
      {
        "topicFilter": "sensor/disconnect",
        "deviceInfo": {
          "deviceNameExpressionSource": "message",
          "deviceNameExpression": "${serialNumber}"
        }
      },
      {
        "topicFilter": "sensor/+/disconnect",
        "deviceInfo": {
          "deviceNameExpressionSource": "topic",
          "deviceNameExpression": "(?<=sensor/)(.*?)(?=/connect)"
        }
      }
    ],
    "attributeRequests": [
      {
        "retain": false,
        "topicFilter": "v1/devices/me/attributes/request",
        "deviceInfo": {
          "deviceNameExpressionSource": "message",
          "deviceNameExpression": "${serialNumber}"
        },
        "attributeNameExpressionSource": "message",
        "attributeNameExpression": "${versionAttribute}, ${pduAttribute}",
        "topicExpression": "devices/${deviceName}/attrs",
        "valueExpression": "${attributeKey}: ${attributeValue}"
      }
    ],
    "attributeUpdates": [
      {
        "retain": true,
        "deviceNameFilter": ".*",
        "attributeFilter": "firmwareVersion",
        "topicExpression": "sensor/${deviceName}/${attributeKey}",
        "valueExpression": "{\"${attributeKey}\":\"${attributeValue}\"}"
      }
    ],
    "serverSideRpc": [
      {
        "type": "twoWay",
        "deviceNameFilter": ".*",
        "methodFilter": "echo",
        "requestTopicExpression": "sensor/${deviceName}/request/${methodName}/${requestId}",
        "responseTopicExpression": "sensor/${deviceName}/response/${methodName}/${requestId}",
        "responseTopicQoS": 1,
        "responseTimeout": 10000,
        "valueExpression": "${params}"
      },
      {
        "type": "oneWay",
        "deviceNameFilter": ".*",
        "methodFilter": "no-reply",
        "requestTopicExpression": "sensor/${deviceName}/request/${methodName}/${requestId}",
        "valueExpression": "${params}"
      }
    ]
  }
}